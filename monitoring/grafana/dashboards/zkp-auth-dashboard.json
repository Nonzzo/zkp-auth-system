{
  "dashboard": {
    "title": "ZKP Authentication Metrics",
    "tags": ["zkp", "auth", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Proof Generation Latency (p95)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(zkp_proof_generation_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "p95 latency"
          }
        ]
      },
      {
        "id": 2,
        "title": "Authentication Success Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "rate(zkp_auth_attempts_total{result=\"success\"}[5m]) / (rate(zkp_auth_attempts_total[5m]) + 0.0001)",
            "refId": "A",
            "legendFormat": "Success Rate"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Users Registered",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "zkp_users_registered_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Verifications",
        "type": "gauge",
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
        "targets": [
          {
            "expr": "zkp_active_verifications",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 5,
        "title": "Proof Verification Results",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(zkp_proof_verified_total[5m])",
            "refId": "A",
            "legendFormat": "{{ result }}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Authentication Attempts by Result",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "rate(zkp_auth_attempts_total[5m])",
            "refId": "A",
            "legendFormat": "{{ result }}"
          }
        ]
      }
    ]
  }
}